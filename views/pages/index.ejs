<%-include('../partials/_header.ejs')%>
<!-- All the blogs  -->
<script src="js/index.js"></script>
<style>
    .upvoted{
        background-color:#FF3B3F;
    }
.likeButton{
    border-color: #000000;
    border-radius: 8px;
    border-style: none;
    box-sizing: border-box;
    color: #000000;
    cursor: pointer;
    display: inline-block;
    font-family: "Haas Grot Text R Web", "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 14px;
    font-weight: 500;
    height: 40px;
    line-height: 20px;
    list-style: none;
    margin: 0;
    outline: none;
    padding: 10px 16px;
    position: relative;
    text-align: center;
    text-decoration: none;
    transition: color 100ms;
    vertical-align: baseline;
    user-select: none;
    -webkit-user-select: none;
    touch-action: manipulation;
}

.downvoted{
        background-color:#FF3B3F;
    }
.alreadyLikedButton{
    border-color: #000000;
    border-radius: 8px;
    border-style: none;
    box-sizing: border-box;
    color: #000000;
    cursor: pointer;
    display: inline-block;
    font-family: "Haas Grot Text R Web", "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 14px;
    font-weight: 500;
    height: 40px;
    line-height: 20px;
    list-style: none;
    margin: 0;
    outline: none;
    padding: 10px 16px;
    position: relative;
    text-align: center;
    text-decoration: none;
    transition: color 100ms;
    vertical-align: baseline;
    user-select: none;
    -webkit-user-select: none;
    touch-action: manipulation;
}
</style>

<div class="container">
    <div class="row">
        <div class="col-md-9">
            <% for(var i=0; i < data.length; i++) { %>
                <div class="card">
                    <div class="row">
                        <div class="col-lg-5" >
                            <img
                            style="width: 100%;max-height:300px;height:100%",
                            class="rounded"
                            src="/img/blogUpdated/<%=data[i].image%>"/>
                        </div>
                        <div class="col-lg-7 col-md-12">
                            <div class="card-body">
                                <h5 class="card-title"><%=data[i].title%></h5>
                                <p class="card-text"><%=data[i].content.substring(0,190)+"..."%></p>
                                <p class="card-text">
                                    <small class="text-body-secondary"><strong>Last Updated: </strong><%=data[i].date_posted%></small>
                                </p>
                                <div class="row">
                                    <div class="col">
                                        <a href="/blog/<%=data[i]._id%>" class="btn btn-primary">Read More</a>
                                    </div>
                                    <div class="col">
                                    </div>
                                    <div class="col">
                                        <!-- Like Button -->
                                        <%if (user.savedPosts.includes(data[i]._id)) {%>
                                            <button class="alreadyLikedButton downvote" onclick="colorChanger(window.getComputedStyle(this).background,'<%=data[i]._id%>')">upVote</button>

                                        <% } else {%>
                                            <button> white</button>
                                            <%}%>
                                        <button class="likeButton upVote" onclick="colorChanger(window.getComputedStyle(this).background,'<%=data[i]._id%>')">upVote</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br>
            <% } %>
        </div>
        <div class="col-md-3">
            <!-- Hot Blogs -->
        </div>
    </div>
</div>


<script>

</script>

<%-include('../partials/_footer.ejs')%>
